// Program prompts the user for the current year and then calculates the date of Easter.
#include <iostream>
#include <string>

int main()
{
int year, a, b, c, d, e, f, g, h, i, j, k, m, p;
std::cout << "What's the year: \n";
std::cin >> year;
a = year % 19;
b = year / 100;
c = year % 100;
d = b / 4;
e = b % 4;
f = (b + 8) / 25;
g = (b - f + 1) / 3;
h = ((19 * a) + b - d - g + 15) % 30;
i = c / 4;
j = c % 4;
k = (32 + (2 * e) + (2 * i) - h - j) % 7;
m = (a + (11 * h) + (22 * k) ) / 451;
std::cout << "Easter Month is " << ( h + k - (7 * m) + 114 ) / 31 << std::endl;
p = ( h + k - (7 * m) + 114 ) % 31;
std::cout << "Easter Date " << p + 1 << std::endl;
return 0;
}
//array or if else statement or switch for number to month calc
